<div class="container">

  <h1>The Cocktails</h1>
  <p>
    <%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-primary" %>
  </p>
  <ul class="list-group">
    <% @cocktails.each do |cocktail| %>
      <li class="list-group-item">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
        <%= cl_image_tag cocktail.picture %>
        <%= link_to cocktail_path(cocktail),
          method: :delete,
          data: { confirm: "Are you sure?" } do %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
      </li>
    <% end %>
  </ul>
</div>
