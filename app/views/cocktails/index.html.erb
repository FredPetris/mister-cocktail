<div class="container">

  <h1>The Cocktails</h1>
  <p>
    <%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-primary" %>
  </p>
  <ul class="list-group">
    <% @cocktails.each do |cocktail| %>
      <li class="list-group-item">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </li>
    <% end %>
  </ul>
</div>
