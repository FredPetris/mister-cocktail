<h2><%= @cocktail.name %></h2>
<%= cl_image_tag @cocktail.picture %>
<p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %></p>
<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
  <li class="list-group-item">
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to  cocktail_dose_path(@cocktail, dose),
    method: :delete,
    data: { confirm: "Are you sure?" } do %>
    <i class="glyphicon glyphicon-trash"></i>
    <% end %>
  </li>
  <% end %>
</ul>
<%= link_to "Back", root_path, class: "btn btn-info" %>
